#!groovy

properties([disableConcurrentBuilds()])

pipeline {
    agent { 
        label 'master'
        }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
    }
    stages {
        stage("First docker build") {
            steps {
                echo "========== start building doker image :) ==========",
                dir('docker/toolbox') {
                    sh 'docker build .'
                }
            }
        }
    }
}